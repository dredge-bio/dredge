{
  "compilerOptions": {
    "lib": [
      "es2019",
      "dom"
    ],

    "strict": true,

    "target": "ES6",

    "module": "commonjs",
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,

    "strict": true,
    "noUncheckedIndexedAccess": true,

    "downlevelIteration": true,

    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts"]
}
